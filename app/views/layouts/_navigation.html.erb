<div class="ui tiered nav menu">
  <div class="container">
    <%= link_to root_path, :class => 'item' do %>
      <i class="bolt icon"></i>
      Sema
    <% end %>
    <div class="right menu">
      <% if current_user %>
        <div class="ui dropdown item">
          User<i class="icon dropdown"></i>
          <div class="menu">
            <%= link_to dashboard_path, class: "item" do %>
              <i class="browser icon"></i>View Dashboard
            <% end %>
            <%= link_to account_path, class: "item" do %>
              <i class="settings icon"></i> Account Settings</a>
            <% end %>
            <%= link_to user_path(current_user), class: "item" do %>
              <i class="edit icon"></i>Edit Profile
            <% end %>
            <%= link_to logout_path, class: "item" do %>
              <i class="forward mail icon"></i>Log out
            <% end %>
          </div>
        </div>
      <% else %>
        <div class="ui item"><%= link_to "Sign In", signin_path %></div>
      <% end %>
      <%= link_to "Help", help_path, class: "item" %>
    </div>
  </div>
</div>

<div class="container">
  <div class="ui sub inverted secondary pointing menu">
    <%= link_to "All", themes_path, class: "item" %>
    <% Category.order(:name).each do |category| %>
      <%= link_to category.name, category_path(category), class: "item" %>
    <% end %>
  </div>
</div>