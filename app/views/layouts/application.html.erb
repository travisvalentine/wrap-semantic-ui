<!DOCTYPE html>
<html>
<head>

  <title><%= content_for?(:meta_title) ? yield(:meta_title) : t(:"head.title") %></title>
  <meta name="description" content="<%= content_for?(:meta_desc) ? yield(:meta_desc) : t(:"head.meta_description") %>">

  <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">
  <link rel="icon" href="/favicon.ico" type="image/x-icon">

  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= yield :header %>
</head>
<body class="<%= controller_name %>">
  <div class="sticky-footer-wrapper">

    <%= render 'shared/nav' %>
    <%= render 'shared/subnav' %>

    <div class="container">

      <%= yield :categories %>

      <% if flash[:notice] %>
        <p id="notice" class="ui yellow message"><%= flash[:notice] %></p>
      <% end %>

      <%= yield %>

    </div>
    <div class="push"></div>
  </div><!-- end sticky footer -->

  <%= render 'shared/footer' %>

  <%= yield :javascripts %>
</body>
</html>
