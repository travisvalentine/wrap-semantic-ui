<% content_for :title do %>
  <%= "Hi, #{current_user.username}!" %>
<% end %>
<% content_for :subtext do %>
  Get your Admin on
<% end %>

<% if @themes %>
  <table class="ui table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Author</th>
        <th>Status</th>
        <th>Meets Criteria</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <%= render partial: "admin/dashboards/theme", collection: @themes %>
    </tbody>
  </table>
<% end %>

<% if @expos %>
  <table class="ui table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Submitted by</th>
        <th>Status</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <%= render partial: "admin/dashboards/expo", collection: @expos %>
    </tbody>
  </table>
<% end %>