<%= form_for @snippet do |f| %>

  <% if @snippet.errors.any? %>
    <div class="ui red message">
      <div class="header">We noticed some issues</div>
      <ul class="list">
        <% @snippet.errors.full_messages.each do |message| %>
          <li id="error"><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="ui form">
    <div class="field">
      <%= f.label :title, "Title" %>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <%= f.label :html, "HTML" %>
      <%= f.text_area :html %>
    </div>
    <div class="field">
      <%= f.label :css, "Custom CSS" %>
      <%= f.text_area :css %>
      <span class="text-field-note">Semantic 1.0 styles are included by default</span>
    </div>
    <div class="field">
      <%= f.label :js, "Custom JavaScript" %>
      <%= f.text_area :js %>
      <span class="text-field-note">Semantic UI's JS library is included by default</span>
    </div>
    <div class="field">
      <%= f.label :image, "Image" %>
      <%= f.file_field :image, :class => "image-arena" %>
    </div>
  </div>

  <div class="ui form">
    <%= f.submit "Submit", :class => "ui button green" %>
    <%= link_to "Cancel", :back %>
  </div>
<% end %>