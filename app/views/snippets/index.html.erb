<% content_for :title do %>
  Semantic UI Snippets
<% end %>
<% content_for :subtext do %>
  Create and share pieces of code
<% end %>
<% content_for :right_content do %>
  <%= link_to new_snippet_path do %>
    <div class="ui circular plus icon basic button tooltip" data-content="Add a Snippet" style="margin-top: 15px;">
      <i class="plus large icon"></i>
    </div>
  <% end %>
<% end %>

<% if @snippets.any? %>
  <div class="ui two cards top-20 bottom-20">
    <% @snippets.each do |snippet| %>
      <div class="ui card snips top-20">
        <%= link_to snippet_path(snippet), class: "image" do %>
          <%= image_tag snippet.image %>
        <% end %>
        <div class="content" style="border-top: 1px solid #e9e9e9;">
          <%= link_to snippet.title,snippet_path(snippet), class: "header" %>
          <div class="meta">
            <a class="time"><%= time_ago_in_words(snippet.created_at) %> ago</a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="ui raised segment">
    <%= t(:"snippets.none") %>
    <%= link_to "Create a new one", new_snippet_path %>
  </div>
<% end %>















