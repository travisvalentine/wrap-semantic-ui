<div class="ui grid">
  <div class="row">
    <div class="five wide column"></div>


    <div class="six wide column">
      <h2 class="ui center aligned header">

        <div class="content" style="margin: 30px auto;">
          Welcome
          <div class="sub header">Sign up here</div>
        </div>
      </h2>

      <% if !alert.nil? %>
        <div class="ui red message">
          <div class="header">We noticed some issues</div>
          <ul class="list">
            <li id="error"><%= flash.now[:alert] %></li>
          </ul>
        </div>
      <% end %>

      <div class="ui form segment">
        <%= form_for @user do |f| %>
          <% if @user.errors.any? %>
            <div class="ui red message">
              <div class="header">We noticed some issues</div>
              <ul class="list">
                <% @user.errors.full_messages.each do |message| %>
                  <li id="error"><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="field">
            <%= f.label :username %>
            <div class="ui left labeled icon input">
              <%= f.text_field :username, required: true %>
              <i class="user icon"></i>
              <div class="ui corner label">
                <i class="icon asterisk"></i>
              </div>
            </div>
          </div>
          <div class="field">
            <%= f.label :email %>
            <div class="ui left labeled icon input">
              <%= f.text_field :email, required: true %>
              <i class="mail icon"></i>
              <div class="ui corner label">
                <i class="icon asterisk"></i>
              </div>
            </div>
          </div>
          <div class="field">
            <%= f.label :password %>
            <div class="ui left labeled icon input">
              <%= f.password_field :password, required: true %>
              <i class="lock icon"></i>
              <div class="ui corner label">
                <i class="icon asterisk"></i>
              </div>
            </div>
          </div>
          <div class="field">
            <%= f.label :password_confirmation %>
            <div class="ui left labeled icon input">
              <%= f.password_field :password_confirmation, required: true %>
              <i class="lock icon"></i>
              <div class="ui corner label">
                <i class="icon asterisk"></i>
              </div>
            </div>
          </div>
          <%= submit_tag 'Sign up', :class => "ui green submit button" %>
        <% end %>
      </div>
      <div class="ui horizontal divider" style="margin: 40px 0;">
        Or
      </div>
      <div style="text-align: center;">
        <%= link_to new_session_path, class: "ui black large labeled icon button" do %>
          Sign In
          <i class="signup icon"></i>
        <% end %>
      </div>

    </div>


    <div class="five wide column"></div>
  </div>
</div>