<div class="ui form inverted">
  <%= form_for current_user do |f| %>
    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>

    <div class="field">
      <%= f.label :location %>
      <%= f.text_field :location %>
    </div>

    <div class="field">
      <%= f.label :website %>
      <%= f.text_field :website %>
    </div>

    <div class="field">
      <%= f.label :about %>
      <%= f.text_field :about %>
    </div>

    <%= f.submit "Save", :class => "ui button blue" %>
  <% end %>
</div>