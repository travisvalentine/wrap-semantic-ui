<div class="form-wrap card">
  <h2 class="ui center aligned icon header">
    Edit your details
  </h2>

  <div class="ui horizontal divider">
    <i class="circular angle down icon"></i>
  </div>

  <div class="ui form">
    <%= form_for current_user do |f| %>
      <div class="field">
        <%= f.label :username %>
        <%= f.text_field :username %>
      </div>

      <div class="field">
        <%= f.label :location %>
        <%= f.text_field :location %>
      </div>

      <div class="field">
        <%= f.label :website %>
        <%= f.text_field :website %>
      </div>

      <div class="field">
        <%= f.label :about %>
        <%= f.text_area :about %>
      </div>

      <%= f.submit "Save", :class => "ui button green" %>
      <%= link_to "Cancel", user_path(current_user), :class => "secondary-text" %>
    <% end %>
  </div>
</div>