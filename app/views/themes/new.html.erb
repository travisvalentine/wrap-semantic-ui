<%= form_for @theme do |f| %>

  <% if @theme.errors.any? %>
    <div class="header">We noticed some issues</div>
      <% @theme.errors.full_messages.each do |message| %>
        <p id="error"><%= message %></p>
      <% end %>
    </div>
  <% end %>

  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>
  <div>
    <%= f.label :copyright %>
    <%= f.text_field :copyright %>
  </div>
  <div>
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>

  <%= f.submit "Submit" %>
<% end %>